<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="teamscore-onboarding">
        <addColumn tableName="ORGANIZATION">
            <column name="ESCAPE_VAT" type="INT"/>
        </addColumn>

        <addNotNullConstraint columnName="ESCAPE_VAT" defaultNullValue="0" tableName="ORGANIZATION"/>
    </changeSet>
    <changeSet id="2" author="teamscore-onboarding">
        <addColumn tableName="ORGANIZATION">
            <column name="NAME" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="NAME" defaultNullValue="''" tableName="ORGANIZATION"/>
    </changeSet>
    <changeSet id="3" author="teamscore-onboarding">
        <addColumn tableName="ORGANIZATION">
            <column name="REGISTRATION_NUMBER" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="REGISTRATION_NUMBER" defaultNullValue="''" tableName="ORGANIZATION"/>
    </changeSet>
    <changeSet id="4" author="teamscore-onboarding">
        <addColumn tableName="ORGANIZATION">
            <column name="TAX_NUMBER" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="TAX_NUMBER" defaultNullValue="''" tableName="ORGANIZATION"/>
    </changeSet>
</databaseChangeLog>