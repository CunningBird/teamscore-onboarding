<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://stageListView.title"
      focusComponent="stagesDataGrid">
    <data>
        <collection id="stagesDc"
                    class="ru.teamscore.onboarding.entity.Stage">
            <fetchPlan extends="_base"/>
            <loader id="stagesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Stage e]]>
                </query>
            </loader>
        </collection>
        <instance id="stageDc"
                  class="ru.teamscore.onboarding.entity.Stage">
            <fetchPlan extends="_base"/>
            <loader id="stageDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="stagesDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createBtn" action="stagesDataGrid.create"/>
                    <button id="editBtn" action="stagesDataGrid.edit"/>
                    <button id="removeBtn" action="stagesDataGrid.remove"/>
                    <simplePagination id="pagination" dataLoader="stagesDl"/>
                </hbox>
                <dataGrid id="stagesDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="stagesDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="edit" type="list_edit"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="name"/>
                        <column property="dateFrom"/>
                        <column property="dateTo"/>
                        <column property="amount"/>
                        <column property="vat"/>
                        <column property="totalAmount"/>
                        <column property="description"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectBtn" action="selectAction"/>
                    <button id="discardBtn" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="stageDc">
                    <textField id="nameField" property="name"/>
                    <datePicker id="dateFromField" property="dateFrom"/>
                    <datePicker id="dateToField" property="dateTo"/>
                    <textField id="amountField" property="amount"/>
                    <textField id="vatField" property="vat"/>
                    <textField id="totalAmountField" property="totalAmount"/>
                    <textField id="descriptionField" property="description"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveBtn" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
